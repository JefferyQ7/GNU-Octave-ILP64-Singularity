Bootstrap: library
From: ubuntu:18.04

%files
    /usr/local
%post
    echo "deb http://ftp.riken.go.jp/Linux/ubuntu/ bionic main universe" > /etc/apt/sources.list \
    && apt-get update \
    && apt-get upgrade \
    && apt-get --no-install-recommends --yes install \
      build-essential \
      libx11-6 \
    && apt-get clean \
    && rm -rf \
      /tmp/hsperfdata* \
      /var/*/apt/*/partial \
      /var/lib/apt/lists/* \
      /var/log/apt/term*
