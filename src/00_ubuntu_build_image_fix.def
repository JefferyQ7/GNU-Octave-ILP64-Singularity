Bootstrap: localimage
From: 00_ubuntu_build_image.sif

%post
    echo "deb http://ftp.riken.go.jp/Linux/ubuntu/ bionic main universe" > /etc/apt/sources.list \
    && apt-get --yes update \
    && apt-get --yes upgrade \
    && apt-get --no-install-recommends --yes install \
      unzip \
      zip \
    && apt-get clean \
    && rm -rf \
      /tmp/hsperfdata* \
      /var/*/apt/*/partial \
      /var/lib/apt/lists/* \
      /var/log/apt/term*
