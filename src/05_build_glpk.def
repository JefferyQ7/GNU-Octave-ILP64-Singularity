Bootstrap: localimage
From: 04_build_qrupdate.sif

%post
    mkdir -p /tmp/build \
    && cd    /tmp/build \
    && wget "https://ftp.gnu.org/gnu/glpk/glpk-4.65.tar.gz" \
    && tar -xf glpk-4.65.tar.gz \
    && cd      glpk-4.65        \
    && ./configure --with-gmp        \
                   --prefix=/usr     \
                   --libdir=/usr/lib \
    && make -j4     \
    && make check   \
    && make install \
    && rm -rf /tmp/build
