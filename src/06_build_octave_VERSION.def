Bootstrap: localimage
From: 05_build_glpk.sif

%post
    mkdir -p /tmp/build \
    && cd    /tmp/build \
    && wget "https://ftpmirror.gnu.org/octave/octave-VERSION.tar.gz" \
    && tar -xf octave-VERSION.tar.gz \
    && cd      octave-VERSION        \
    && ./configure                          \
           CPPFLAGS='-I/usr/local/include'  \
           LDFLAGS='-L/usr/local/lib'       \
           F77_INTEGER_8_FLAG='-fdefault-integer-8' \
           LD_LIBRARY_PATH='/usr/local/lib' \
           --prefix=/usr/local              \
           --libdir='/usr/local/lib'        \
           --enable-64                      \
           --with-blas='-lopenblas'         \
           --without-fltk                   \
           --without-portaudio              \
           --without-qt                     \
           --without-sndfile                \
    && make -j4 \
    && make check LD_LIBRARY_PATH='/usr/local/lib' \
    && make install \
    && rm -rf /tmp/build
