Bootstrap: localimage
From: build/03_build_arpack_ng.sif

%post
    mkdir -p /tmp/build \
    && cd    /tmp/build \
    && wget "http://downloads.sourceforge.net/project/qrupdate/qrupdate/1.2/qrupdate-1.1.2.tar.gz" \
    && tar -xf qrupdate-1.1.2.tar.gz \
    && cd      qrupdate-1.1.2 \
    && make -j4               \
          PREFIX=/usr/local   \
          LAPACK=""           \
          BLAS="-lopenblas"   \
          FFLAGS="-L/usr/local/lib -fdefault-integer-8" \
    && make test              \
          PREFIX=/usr/local   \
          LAPACK=""           \
          BLAS="-lopenblas"   \
          FFLAGS="-L/usr/local/lib -fdefault-integer-8" \
    && make install           \
          PREFIX=/usr/local   \
          LAPACK=""           \
          BLAS="-lopenblas"   \
          FFLAGS="-L/usr/local/lib -fdefault-integer-8" \
    && rm -rf /tmp/build
